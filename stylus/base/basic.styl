//1px边框,父元素需要设置相对定位

setTopLine(lineColor)
  content ' '
  position absolute
  top 0
  left 0
  width 100%
  height 1px
  border-top 1px solid lineColor
  transform-origin 0 0
  transform scaleY(0.5)
  color lineColor
  
