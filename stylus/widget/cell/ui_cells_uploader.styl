@import "../../base/fn"

upLoaderBorderColor = #D9D9D9
upLoaderActiveBorderColor = #999999
upLoaderFileSpacing = 9px
upLoaderSize = 79px
upLoaderBorderWidth = 1px

.ui-uploader-hd
	padding-left 0
	padding-right 0
	padding-top 0
	.cell-ft
		font-size 1em

.ui-uploader-bd
	margin-bottom cellGapH - (cellGapV + upLoaderFileSpacing)
	margin-right -upLoaderFileSpacing
	overflow hidden

.ui-uploader-files
	list-style none

.ui-uploader-file
	float left
	margin-right upLoaderFileSpacing
	margin-bottom upLoaderFileSpacing
	height upLoaderSize
	background no-repeat center center
	background-size cover

.ui-uploader-status
	position relative
	&:before
		content ''
		position absolute
		top 0
		right 0
		bottom 0
		left 0
		background-color rgba(0,0,0,.5)
	.ui-uploader-status-content
		position absolute
		top 50%
		left 50%
		transform translate(-50%,-50%)
		color #FFF
	.ui-icon-warn
		display block


.ui-uploader-input-wrap
	float left
	position relative
	margin-left upLoaderFileSpacing
	margin-bottom  upLoaderFileSpacing
	width upLoaderSize - upLoaderBorderWidth*2
	height upLoaderSize - upLoaderBorderWidth*2
	border upLoaderBorderWidth solid upLoaderBorderColor
	&:before,&:after
		content ' '
		psoition absolute
		top 50%
		left 50%
		transform translate(-50%,-50%)
		background-color upLoaderBorderColor
	
	&:before
		width upLoaderBorderWidth + 1
		height upLoaderSize/2
	
	&:after
		width upLoaderSize/2
		height upLoaderBorderWidth + 1
	
	&:active
		border-color upLoaderActiveBorderColor
		&:before,&:after
			background-color upLoaderActiveBorderColor
	
.ui-uploader-input
	position absolute
	z-index 1
	top 0
	left 0
	width 100%
	height 100%
	opacity 0
	-webkit-tap-highlight-color rgba(0,0,0,0)
	
	