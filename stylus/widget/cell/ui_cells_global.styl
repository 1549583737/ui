@import "../../base/fn";


.cell
	//onepx
	position relative
	&:before
		setTopLine(cellBorderColor)
		left cellGapH;
	&:first-child
		&.before
			display none

.cells
	margin-top cellsMarginTop;
	background-color cellBg;
	line-height cellLineHeight;
	font-size cellFontSize;
	overflow hidden
	//onepx
	position relative
	&:before
		setTopLine(cellBorderColor)
	&:after
		setBottomLine(cellBorderColor)

.cells-title
	margin-top .77em
	margin-bottom .3em
	padding-left cellGapH
	padding-right cellGapH
	font-size cellTipsFontSize
	color globalTextColor

.cells-tips
	margin-top .3em
	color globalTextColor
	padding-left cellGapH
	padding-right cellGapH
	font-size cellTipsFontSize

.cell-ft
	text-algin right
	color globalTextColor

.cell-primary
