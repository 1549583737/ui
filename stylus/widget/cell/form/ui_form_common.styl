@import "../../../base/fn"


.ui-textarea
  display block
  border 0
  resize none
  width 100%
  color inherit
  font-size 1em
  line-height inherit
  outline 0

.ui-input
	width 100%
	border 0
	outline 0
	-webkit-appearance none
	background-color transparent
	font-size inherit
	color inherit
	height unit(cellLineHeight, "em")
	line-height cellLineHeight
	text-algin right
	
	button
		-webkit-appearance none
		margin 0

.ui-textarea-counter
	color globalDescColor
	text-align right
	.ui-cell-warn
		color globalWarnColor
	
.ui-toptips
	display none
	position fixed
	-webkit-transform translateZ(0)
	width 100%
	top 0
	line-height 2.3
	font-size 14px
	text-align center
	z-index 2
	&.ui-warn
		background-color globalWarnColor

.ui-cell-form
	.ui-cell-warn
		color globalWarnColor
		.ui-icon-warn
			display inline-block
	
	.ui-cell-hd
		padding-right .3em
	
	.ui-cell-ft
		font-size 0
	.ui-icon-warn
		display none
	
	input,textarea,label
		-webkit-tap-highlight-color rgba(0,0,0,0)
	


	
	