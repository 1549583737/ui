@import "../../base/fn"

.dialog
  absolute top 50% left 50%
  transform translate(-50%,-50%)
  width 80%
  z-index 999
  background-color dialogBgColor
  text-align center
  border-radius 3px
  .dialog-hd
      padding 1.2em 0 .5em
      font-size 1.6rem
      font-weight 400
      color dialogHdFontColor
  .dialog-bd
      padding 5px 2rem
      font-size 1.5rem
      color dialogBdFontColor
  .dialog-ft
    border-top 1px solid #ccc
    display flex
    .btn-dialog
      flex 1
      text-align center
      font-size 1.6rem
      padding 8px 0
      setTapColor()
    .default
      position relative
      color dialogDefaultFontColor
    .primary
      color dialogPrimaryFontColor
//confirm
.dialog-confirm
  .dialog
    .dialog-hd
      padding 1.2em 20px .5em
    .dialog-bd
      text-align left
//alert
.dialog-alert
  .dialog
    .dialog-hd
      padding 1.2em 20px .5em
    .dialog-bd
      text-align center